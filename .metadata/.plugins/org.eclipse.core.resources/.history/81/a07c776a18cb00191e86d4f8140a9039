#include <iostream>
#include "Pessoa.h"

Pessoa(){};

Pessoa(char* n){
	nome = n;
}

Pessoa(char* n, short i){
	nome = n;
	idade = i;
}

Pessoa(char* n, short i, float a){
	nome = n;
	idade = i;
	altura = a;
}

void setIdade(short i){
	idade = i;
}

void setAltura(float a){
	altura = a;
}
int getIdade();
float getAltura();
void PrintDados();
