#include <iostream>
#include "Pessoa.h"

Pessoa(char* n){
	nome = n;
}
Pessoa(char* n, short i){
	nome = n;
	idade = i;
}
Pessoa(char* n, short i, float a){
	nome = n;
	idade = i;
}

void setIdade(short i);
void setAltura(float a);
int getIdade();
float getAltura();
void PrintDados();
